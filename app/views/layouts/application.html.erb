<!-- MASTER LAYOUT FILE FOR THE WHOLE APPLICATION AKA THE TOP AND BOTTOM BUNS OF THE VIEW BURGER-->
<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <!--This is where we set our seo meta tags - note content can be controlled through seo instance variable-->
    <meta name="keywords" content=<%= @seo_keywords %> />

    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">


      <%= render "shared/application_nav"%>

      <%= login_helper %>

      <%= yield %>
      <%= copyright_generator %>
      <% source_helper('application') %>
    </div>
  </body>
</html>
