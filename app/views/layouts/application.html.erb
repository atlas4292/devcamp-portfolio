<!-- MASTER LAYOUT FILE FOR THE WHOLE APPLICATION AKA THE TOP AND BOTTOM BUNS OF THE VIEW BURGER-->
<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <!--This is where we set our seo meta tags - note content can be controlled through seo instance variable-->
    <meta name="keywords" content=<%= @seo_keywords %> />

    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= render "shared/nav", location: 'top' %>

    <%= login_helper %>

    <%= yield %>
    <%= copyright_generator %>
    <% source_helper('application') %>

  </body>
</html>
